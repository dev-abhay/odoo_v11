    	<record model="ir.ui.menu" id="purchase.menu_procurement_management_pending_invoice" >
        	<field name='name'>Donation Bills</field>
    	</record>

        <record model="ir.ui.menu" id="purchase.menu_procurement_management_pending_invoice" >
            <field name='name'>Donation Bills</field>
        </record>
        

    	<record model="ir.actions.act_window" id="purchase.action_purchase_order_report_all" >
