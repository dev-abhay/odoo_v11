<odoo>
    <data>
        <!--action for donation menu -->
        <record model="ir.actions.act_window" id="action_donation_menu">
            <field name="name">Donation</field>
            <field name="res_model">donation.donation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a Donation
                </p>
            </field>
        </record>

        <menuitem id='donation_menu_menu' name="Donations"/>
        <!--<menuitem id='donation_main_menu_request' name="Donation Request" parent="donation_menu_menu" action="action_donation_menu" sequence="1"/>-->

        <!--    <menuitem id='donation_menu' name="Donation Request"
        parent="donation_main_menu" action="action_donation_menu"/>-->

        <!--      <menuitem id='create_donation_menu' name="Donation Request"
        parent="donation_menu" action="action_donation_menu"/>-->

        <!-- form view for  domation.donation -->
        <record model="ir.ui.view" id="donation_form_view">
            <field name="name">donation.form</field>
            <field name="model">donation.donation</field>
            <field name="arch" type="xml">
                <form string="Donation Form">
                    <header>
                        <button string="Draft" type="object" name="draft_progressbar" attrs="{'invisible': [('donation_state', '=', 'draft'),]}"/>
                        <button string="Received" type="object" name="received_progressbar" class="oe_highlight" attrs="{'invisible': [('donation_state','!=','draft')]}"/>
                        <button string="Unpack" type="object" name="unpack_progressbar" attrs="{'invisible': [('unpacked_state','=','Donation Item Unpacked.'), ('is_a_unnkown_item', '=', False),]}"/>
                        <button string="Move To Inventory" type="object" name="move_to_inventory_progressbar" attrs="{'invisible': [('donation_state','=','move_to_inventory')]}" />

                        <!-- <button string="Create Donation Order" type="object" name="create_donation_order" attrs="{'invisible': [('is_a_unnkown_item', '=', True),]}"/>
                        -->
                        <!--This will create the statusbar, thanks to the widget. -->
                        <field name="donation_state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <group>
                            <field name="donor" string="Donor" domain="[('is_a_donor','=',True)]" required="True"/>
                            <field name="donation_description" string="Donation Description"/>
                            <field name="donation_type" string="Donation Type" />
                            <field name="donation_date" string="Donation Date" required="True"/>
                            <field name="unpacked_state" invisible="1"/>
                            <field name = 'is_a_unnkown_item' string="Unknown Item"/>
                        </group>

                        <div class="oe_title"></div>

                        <notebook>
                    
                            <page  attrs="{'invisible': ['|',('is_a_unnkown_item','!=',True)]}" string="Box Items">
                                <field name ="product_lines">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_qty"/>
                                        <field name="schedule_date" required="True" invisible="1"/>
                                        <field name="product_uom_id"/>
                          
                                    </tree>
                                </field> 
                            </page>
                            <page string="Products">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_qty"/>
                                        <field name="schedule_date" required="True" invisible="1"/>
                                        <field name="product_uom_id"/>
                                    </tree>
                                </field>
                            </page>

                  

                            <page  attrs="{'invisible': ['|', ('donation_state', '=', 'draft'),('donation_state', '=', 'received')]}" string="Donation Order">
                                <field name ="purchase_order"/>
                            </page>

                            <page string="Notes">
                                <field name="additional_notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="donation_search_view">
            <field name="name">donation.search</field>
            <field name="model">donation.donation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="donor"/>
                    <field name="donation_type"/>
                    <field name="donation_state"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="donation_tree_view">
            <field name="name">donation.tree</field>
            <field name="model">donation.donation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="donor"/>
                    <field name="donation_type"/>
                    <field name="donation_date"/>
                    <field name="donation_description"/>
                    <field name="donation_state"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>

