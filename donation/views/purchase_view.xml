<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_order_template_inherit">
            <field name="name">purchase.order.template.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name='contact_number'/>
                    <field name='receipt_address'/>
                    <field name='is_a_unnkown_item'/>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name='box_numbers'/>
                    <field name="donation_type" string="Donation Type" />
                    <field name="donation_description" string="Donation Description"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='date_planned']" position="attributes">
                    <attribute name='invisible'>True</attribute>
                </xpath>
                <xpath expr="//page[1]" position="before">
                    <page  attrs="{'invisible': ['|',('is_a_unnkown_item','!=',True)]}" string="Box Items">
                        <field name ="product_lines">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="schedule_date" required="True" invisible="1"/>
                                <field name="product_uom_id"/>
                            </tree>
                        </field> 
                    </page>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="purchase_requisition_template_inherit">
            <field name="name">purchase.requisition.template.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase_requisition.purchase_order_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='requisition_id']" position="attributes">
                    <attribute name='groups'>donation.purchase_requisition_users</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>